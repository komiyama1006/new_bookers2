<div style="margin-bottom:110px"></div>
	<!-- <div class="col-md-offset-1 col-md-3">  -->
	<div class="container">
		<div class="row">
			<div class="col-xs-3">

				<h2>User info</h2>
				<%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, format:'jpeg', fallback:"no_image.jpg" %>
				<h4>name</h4><%= current_user.name %>
				<h4>introduction</h4><%= current_user.introduction %>
				<h4>edit</h4><%= link_to  edit_user_path(current_user) do %>
				<div class ="col-xs-10 btn btn-default glyphicon glyphicon-wrench"></div>
				<% end %>

				<div style="margin-bottom:100px"></div>

				<h2>Newbook</h2>
				<% if @book.errors.any? %>
				  <div id="error_explanation" class="alert alert-danger">
				    <ul>
				      <%= @book.errors.count %>errors prohibited this obj from being saved:
				      	<% @book.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				    </ul>
				<% end %>

				<%= form_for(@book)  do |f| %>
				    <h4>Title</h4>
				    <%= f.text_field :title %>
				    <h4>Opinion</h4>
				    <%= f.text_area :body %><br>
				    <%= f.submit 'Create Book', class:"btn btn-primary col-xs-10" %>
				<% end %>
			</div>

			<!-- <div class="col-md-offset-4"> -->
			<div class="col-xs-9">

				<h2>Books</h2>
				<table class="table table-hover table-inverse">
						<thead>
							<tr>
								<th>title</th>
								<th>body</th>
							</tr>
						</thead>
						<tbody>
							<% @books.each do |book| %>
							<tr>
								<td>
									<%= link_to attachment_image_tag current_user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
								</td>
							   <td>
							   		<%= link_to  book_path(book.id) do%>
										<p><%=  book.title  %></p>
									<% end %>
							   </td>
							   <td>
							   	<%= book.body %>
							   </td>
							</tr>
							<% end %>
						</tbody>
				</table>
			</div>
		</div>
	</div>
</div>