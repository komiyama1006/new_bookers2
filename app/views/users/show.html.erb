<div style="margin-bottom:110px"></div>
<div class="container">
	<div class="row">
		<!-- <div class="col-md-4 col-md-offset-2"> -->
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback:"no_image.jpg" %>
			<h4>name</h4><%= @user.name %>
			<h4>introduction</h4><%= @user.introduction %>

			<div style="margin-bottom:30px"></div>

			<%= link_to  edit_user_path(@user.id) do %>
				<div class ="col-xs-10 btn btn-default glyphicon glyphicon-wrench"></div><br>
			<% end %>

			<div style="margin-bottom:50px"></div>

			<h2>Newbook</h2>
			<!-- 2019.11.29 -->
			<% if @book.errors.any? %>
			  <div id="error_explanation" class="alert alert-danger">
			    <ul>
			      <% @book.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			  </div>
			<% end %>
			<%= form_for(@book)  do |f| %>
			    <h4>Title</h4>
			    <%= f.text_field :title %>
			    <h4>Opinion</h4>
			    <%= f.text_area :body %><br>
			    <%= f.submit 'Create Book', class:"btn btn-primary col-xs-10" %>
			<% end %>
		</div>

			<!-- <div class="col-md-offset-4"> -->
			<!-- <div class="col-xs-5"> -->
			<div class="col-xs-9">
			
				<h2>Books</h2>
				<!-- 下記 Title/Opinionの間を空け、下線を引く -->
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th><h4>Title</h4></th>

							<th><h4>Opinion</h4></th>
						</tr>
					</thead>
					<tbody>
						<% @user.books.each do |book| %>
						<tr>
						   <td>
								<%= link_to attachment_image_tag current_user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
							</td>
							<td>
								<%= link_to  book_path(book.id) do %>
								<p><%=  book.title  %></p>
						   	</td>
						   	<td>
						   		<%= book.body %>
						   	</td>
						</tr>
						<% end %>
						<% end %>
					</tbody>
				</table>
			</div>
	</div>
</div>